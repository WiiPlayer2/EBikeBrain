<v:Card xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:EBikeBrainApp.Avalonia.XPlat.ViewModels.Cards"
        xmlns:v="clr-namespace:EBikeBrainApp.Avalonia.XPlat.Views.Cards"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="EBikeBrainApp.Avalonia.XPlat.Views.Cards.SpeedCard"
        x:DataType="vm:SpeedCardViewModel">
    <Grid RowDefinitions="*,Auto">
        <TextBlock Grid.Row="0"
                   Text="{Binding Value^}"
                   FontSize="30"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center" />
        <TextBlock Grid.Row="1"
                   Text="km/h"
                   HorizontalAlignment="Center" />
    </Grid>
</v:Card>