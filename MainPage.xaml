<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EBikeBrain.MainPage"
             BindingContext="{StaticResource mainViewModel}">
    <Grid RowSpacing="8"  RowDefinitions="Auto,Auto,Auto,Auto,*">
        <Button Grid.Row="0"  Command="{Binding ConnectCommand}" Text="Connect"/>
        <Button Grid.Row="1"  Command="{Binding DisconnectCommand}" Text="Disconnect" />
        <Label Grid.Row="2" HorizontalOptions="Center"  Text="RPM" FontSize="30" />
        <Label Grid.Row="3" HorizontalOptions="Center"  Text="{Binding CurrentRPM, StringFormat='{0:F1}'}" FontSize="120" />
        <Grid Grid.Row="4"  RowSpacing="8" ColumnSpacing="8"  ColumnDefinitions="Auto,Auto" RowDefinitions="Auto,Auto" HorizontalOptions="Center">
            <Label Grid.RowSpan="2" Text="{Binding CurrentLevel}" FontSize="100" VerticalOptions="Center" />
            <Button Grid.Row="0" Grid.Column="1" Text="+" FontSize="80" Command="{Binding IncreaseLevelCommand}" />
            <Button Grid.Row="1" Grid.Column="1" Text="-" FontSize="80" Command="{Binding DecreaseLevelCommand}" />
        </Grid>
    </Grid>
</ContentPage>
